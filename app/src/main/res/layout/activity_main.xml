<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_view"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/mainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAIN_ACTIVITY"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        />
    <ProgressBar
        android:id="@+id/healthBar"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:indeterminate="true"
        style="?android:attr/progressBarStyleHorizontal"
        android:indeterminateDrawable="@drawable/progressbar_health"
        android:progress="100"
        android:layout_below="@+id/mainText"
        />

    <TextView
        android:text="HP"
        android:textColor="@color/black"
        android:background="#00000000"
        android:layout_alignLeft="@id/healthBar"
        android:layout_alignTop="@id/healthBar"
        android:layout_alignRight="@id/healthBar"
        android:layout_alignBottom="@id/healthBar"
        android:layout_height="20dp"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"/>







</RelativeLayout>